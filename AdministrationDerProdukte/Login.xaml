<Window x:Class="AdministrationDerProdukte.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Label Content="Login" Margin="10,10,0,0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Width="178" Height="47" VerticalAlignment="Top"/>
        <Label Content="Benutzer" HorizontalAlignment="Left" Margin="5,105,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox x:Name="txtBenutzer" HorizontalAlignment="Left" Height="26" Margin="100,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <Label Content="Passwort" HorizontalAlignment="Left" Margin="5,136,0,0" VerticalAlignment="Top" Width="90"/>
        <PasswordBox x:Name="txtPasswort" HorizontalAlignment="Left" Margin="100,136,0,0" VerticalAlignment="Top" Width="164" Height="26" KeyDown="txtPasswort_KeyDown_1"/>
        <Button x:Name="btnAnmelden" Content="Anmelden" Margin="158,0,0,41" VerticalAlignment="Bottom" Height="24" HorizontalAlignment="Left" Width="106" RenderTransformOrigin="-0.057,0.708" Click="Button_Click"/>

    </Grid>
</Window>
